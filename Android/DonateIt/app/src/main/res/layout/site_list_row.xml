<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/siteListOrgan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wheels For Wishes Car Donation Benefiting Make-A-Wish"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/siteListAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="60 Carroll St, Brentwood, NY 11717"/>

    <TextView
        android:id="@+id/siteListCats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This site accepts food, cars, books, and blood"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic" />




</LinearLayout>